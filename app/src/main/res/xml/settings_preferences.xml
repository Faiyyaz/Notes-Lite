<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/action_settings" >

    <ListPreference
        android:defaultValue="light-sans"
        android:entries="@array/theme_list"
        android:entryValues="@array/theme_list_values"
        android:key="theme"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/action_theme" />
    <ListPreference
        android:defaultValue="normal"
        android:entries="@array/font_size_list"
        android:entryValues="@array/font_size_list_values"
        android:key="font_size"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/action_font_size" />
    <ListPreference
        android:defaultValue="date"
        android:entries="@array/sort_by_list"
        android:entryValues="@array/sort_by_list_values"
        android:key="sort_by"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/action_sort_by" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="show_dialogs"
        android:title="@string/pref_title_show_dialogs" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="show_date"
        android:title="@string/pref_title_show_date" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="direct_edit"
        android:title="@string/pref_title_direct_edit" />

</PreferenceScreen>
